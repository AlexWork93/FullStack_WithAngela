const imagesArr = ["images/dice1.png",
"images/dice2.png",
"images/dice3.png",
"images/dice4.png",
"images/dice5.png",
"images/dice6.png"]


function getRandomNumber(){
    return Math.floor(Math.random() * 6)
}

const playerOneResult = getRandomNumber();
const playerTwoResult = getRandomNumber();
let title = ""

document.querySelector(".img1").setAttribute("src", `${imagesArr[playerOneResult]}`)
document.querySelector(".img2").setAttribute("src", `${imagesArr[playerTwoResult]}`)

if (playerOneResult > playerTwoResult) {
    title = "Player 1 Wins"
} else if (playerTwoResult > playerOneResult) {
    title = "Player 2 Wins"
} else {
    title = "Draw"
}

document.querySelector("h1").innerHTML = title;